        <service
            android:name=".ui.firebase.FireBaseMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.activity.EditProfileActivity"
            android:screenOrientation="portrait">

