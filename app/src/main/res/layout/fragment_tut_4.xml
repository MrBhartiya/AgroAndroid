<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_first_bg">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:src="@drawable/tutorial_video_description" />


        <TextView
            android:id="@+id/msg1"
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/_24sdp"
            android:layout_height="wrap_content"
            android:text="@string/str_tut_one_tittle"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/str_tutorial_first_msg"
            android:textAlignment="center"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/msg1"
            android:textColor="@android:color/white"
            />
</RelativeLayout>